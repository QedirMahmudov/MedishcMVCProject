<section class="blog blog-single" id="blog">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-8">
                <!-- Blog Entry-->
                <div class="blog-entry">
                    <div class="entry-img">
                        <a href="#"><img src="~/assets/images/blog/single/@Model.Blog.Image" alt="entry image" /></a>
                        <div class="entry-date">
                        </div>
                    </div>
                    <div class="entry-content">
                        <div class="entry-meta">
                            @foreach (var item in Model.Categories)
                            {
                                <div class="entry-category"><a href="#"> @item.Name </a><a href="#"></a></div>

                            }
                            <div class="divider"> </div>
                            <div class="entry-author">
                                <a href="javascript:void(0)">
                                    <p>@Model.Blog.Author.Name </p>
                                </a>
                            </div>
                            <div class="divider"></div>
                            <div class="entry-comments"><span>comments:</span><span class="num">2</span></div>
                        </div>
                        <!-- .entry-meta end-->
                        <div class="entry-title">
                            <h4>@Model.Blog.Title</h4>
                        </div>
                        <div class="entry-bio">
                            <p>@Model.Blog.Description</p>

                        </div>
                    </div>
                    <div class="entry-holder">
                        <div class="entry-tags"><a href="javascript:void(0)">life style</a><a href="javascript:void(0)">nutrition</a><a href="javascript:void(0)">infectious</a></div>
                        <!-- .entry-tags end-->
                        <div class="entry-share"><span>share</span><a class="facebook-bg" href="#"><i class="fab fa-facebook-f"></i></a><a class="twitter-bg" href="#"><i class="fab fa-twitter"> </i></a><a class="instagram-bg" href="#"><i class="fab fa-instagram"></i></a></div>
                        <!-- .entry-share end-->
                    </div>
                    <div class="nav-posts">
                        <div class="prev-post">
