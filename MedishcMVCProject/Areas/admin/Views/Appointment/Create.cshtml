@model CreateAppointmentVM

<form asp-action="Create" method="post">
    <div class="row gx-3">
        <div class="col-sm-6">
            <label asp-for="PatientName" class="form-label"></label>
            <input asp-for="PatientName" class="form-control" />
            <span asp-validation-for="PatientName" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="PatientSurname" class="form-label"></label>
            <input asp-for="PatientSurname" class="form-control" />
            <span asp-validation-for="PatientSurname" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" class="form-select">
                <option value="">Select</option>
                <option value="0">Male</option>
                <option value="1">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="Age" class="form-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="Time" class="form-label"></label>
            <input asp-for="Time" class="form-control" type="time" />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="SpecialistId" class="form-label">Specialist</label>
            <select asp-for="SpecialistId" asp-items="Model.Specialists" class="form-select"></select>
            <span asp-validation-for="SpecialistId" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="DoctorId" class="form-label">Doctor</label>
            <select asp-for="DoctorId" asp-items="Model.Doctors" class="form-select"></select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>
        <div class="col-sm-6">
            <label asp-for="BloodGroupId" class="form-label">Blood Group</label>
            <select asp-for="BloodGroupId" asp-items="Model.BloodGroups" class="form-select"></select>
        </div>
        <div class="col-sm-6">
            <label asp-for="DiseaseId" class="form-label">Disease</label>
            <select asp-for="DiseaseId" asp-items="Model.Diseases" class="form-select"></select>
        </div>
        <div class="col-sm-12">
            <label asp-for="Problem" class="form-label"></label>
            <textarea asp-for="Problem" class="form-control" rows="3"></textarea>
        </div>
        <div class="col-sm-12 text-end mt-3">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Book Appointment</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}