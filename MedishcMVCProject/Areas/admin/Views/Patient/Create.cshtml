                        </div>
                        <!-- Card acrions ends -->
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Row ends -->

</div>



<ul id="selected-files" class="mt-2 small text-secondary"></ul>





<style>
    .file-chip {
        display: flex;
        align-items: center;
        background-color: #f1f1f1;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.875rem;
        color: #333;
        max-width: 100%;
        white-space: nowrap;
    }

        .file-chip i {
            margin-left: 8px;
            cursor: pointer;
            color: #dc3545;
            transition: color 0.2s ease;
        }

            .file-chip i:hover {
                color: #a71d2a;
            }
</style>









<script>
    let selectedFiles = [];

    document.getElementById('ReportFiles').addEventListener('change', function () {
        const newFiles = Array.from(this.files);

        newFiles.forEach(file => {
            if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
                selectedFiles.push(file);
            }
        });

        renderFileList();
    });

    function renderFileList() {
        const container = document.getElementById('selected-files');
        container.innerHTML = '';

        selectedFiles.forEach((file, index) => {
            const fileChip = document.createElement('div');
            fileChip.className = 'file-chip';

            const fileNameSpan = document.createElement('span');
            fileNameSpan.textContent = file.name;
            fileNameSpan.style.cursor = 'pointer';
            fileNameSpan.title = 'Click to preview';

            fileNameSpan.onclick = () => {
                const blobUrl = URL.createObjectURL(file);
                const iframe = document.getElementById('pdfPreviewFrame');
                iframe.src = blobUrl;
                const modal = new bootstrap.Modal(document.getElementById('pdfModal'));
                modal.show();
            };

            const removeIcon = document.createElement('i');
            removeIcon.className = 'fas fa-times ms-2';
            removeIcon.title = "Remove file";
            removeIcon.onclick = () => {
                selectedFiles.splice(index, 1);
                renderFileList();
            };

            fileChip.appendChild(fileNameSpan);
            fileChip.appendChild(removeIcon);

            container.appendChild(fileChip);
        });
    }
</script>