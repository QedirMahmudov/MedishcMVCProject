                                                <p class="m-0 small">Upload your health reports.</p>
                                            </label>

                                            <input asp-for="ReportFiles" type="file" accept="application/pdf" class="form-control d-none" multiple id="ReportFiles" />

                                            <input asp-for="ReportFiles"
                                                   name="ReportFiles"
                                                   type="file"
                                                   accept="application/pdf"
                                                   class="form-control d-none"
                                                   multiple
                                                   id="ReportFiles" />
